<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import java.net.URL?>

<BorderPane prefHeight="510.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/17"
   xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onAggiungiClicked"
                     text="Aggiungi Libro" />
                  <MenuItem mnemonicParsing="false" onAction="#onSalvaClicked" text="Salva" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onImportaClicked"
                     text="Importa Libreria..." />
                  <MenuItem mnemonicParsing="false" onAction="#onEsportaClicked"
                     text="Esporta Libreria..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onEsciClicked" text="Esci" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Filtra per:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="filtroTipoComboBox" prefWidth="180.0" />

            <StackPane>
               <children>
                  <TextField fx:id="filtroValoreField" promptText="Valore da cercare"
                     onAction="#onFiltraClicked" />
                  <ComboBox fx:id="filtroStatoLetturaComboBox" managed="false" prefWidth="180.0"
                     visible="false" />
               </children>
            </StackPane>

            <Label text="Ordina per:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="ordinamentoTipoComboBox" prefWidth="180.0" />
            <Button mnemonicParsing="false" onAction="#onFiltraClicked" prefHeight="25.0"
               prefWidth="180.0" text="Filtra/Ordina" styleClass="button-primario"/>

            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <Label text="Legenda:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                           preserveRatio="true">
                           <image>
                              <Image url="@../icons/da_leggere.png" />
                           </image>
                        </ImageView>
                        <Label text="Da Leggere" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                           preserveRatio="true">
                           <image>
                              <Image url="@../icons/in_lettura.png" />
                           </image>
                        </ImageView>
                        <Label text="In Lettura" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                           preserveRatio="true">
                           <image>
                              <Image url="@../icons/letto.png" />
                           </image>
                        </ImageView>
                        <Label text="Letto" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0"
         BorderPane.alignment="CENTER">
         <content>
            <TilePane fx:id="bookContainer" hgap="10.0" prefHeight="200.0"
               prefWidth="200.0" vgap="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
   </center>
</BorderPane>